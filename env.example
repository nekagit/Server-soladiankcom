# Soladia Marketplace Environment Configuration

# Frontend Configuration
NODE_ENV=development
PUBLIC_API_BASE_URL=http://localhost:8000
PUBLIC_SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
PUBLIC_SOLANA_NETWORK=mainnet

# Backend Configuration
DATABASE_URL=postgresql://soladia:password@localhost:5432/soladia
SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=true
LOG_LEVEL=INFO

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:4321

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PAYMENT=5/minute

# Solana Configuration
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
SOLANA_NETWORK=mainnet
SOLANA_PRIVATE_KEY=your-solana-private-key-here

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@soladia.com

# Redis Configuration (Optional)
REDIS_URL=redis://localhost:6379

# File Upload Configuration
MAX_FILE_SIZE=10485760  # 10MB
UPLOAD_DIR=uploads

# Security
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Monitoring (Optional)
SENTRY_DSN=your-sentry-dsn-here
GOOGLE_ANALYTICS_ID=your-ga-id-here
