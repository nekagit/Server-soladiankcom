{
  "name": "soladia-frontend",
  "version": "1.0.0",
  "description": "Soladia Marketplace Frontend - Astro + TypeScript + Tailwind CSS",
  "type": "module",
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "astro": "astro",
    "optimize:css": "node scripts/optimize-css.js",
    "build:optimized": "npm run optimize:css && npm run build",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "test:unit": "vitest run --coverage --reporter=verbose",
    "test:integration": "vitest run --config vitest.integration.config.ts --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:all": "node scripts/run-tests.js",
    "test:comprehensive": "node scripts/run-tests.js unit integration e2e",
    "test:ci": "node scripts/run-tests.js unit integration e2e",
    "lint": "eslint . --ext .ts,.astro",
    "lint:fix": "eslint . --ext .ts,.astro --fix",
    "type-check": "astro check",
    "quality:check": "npm run lint && npm run type-check && npm run test:coverage",
    "quality:fix": "npm run lint:fix && npm run test:coverage"
  },
  "dependencies": {
    "@astrojs/check": "^0.9.4",
    "@astrojs/tailwind": "^5.1.0",
    "astro": "^5.14.1",
    "tailwindcss": "^3.4.18",
    "typescript": "^5.9.3"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@solana/web3.js": "^1.98.4",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^22.10.2",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitest/coverage-v8": "^1.0.0",
    "@vitest/ui": "^1.0.0",
    "autoprefixer": "^10.4.21",
    "cssnano": "^7.1.1",
    "eslint": "^8.0.0",
    "eslint-plugin-astro": "^0.29.0",
    "jsdom": "^23.0.0",
    "playwright": "^1.40.0",
    "postcss": "^8.5.6",
    "vitest": "^1.0.0"
  },
  "keywords": [
    "astro",
    "typescript",
    "tailwindcss",
    "solana",
    "marketplace",
    "blockchain"
  ],
  "author": "Soladia Team",
  "license": "MIT"
}
