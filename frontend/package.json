{
  "name": "soladia-frontend",
  "version": "1.0.0",
  "description": "Soladia Marketplace Frontend - Astro + TypeScript + Tailwind CSS",
  "type": "module",
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "astro": "astro",
    "lint": "eslint . --ext .ts,.astro",
    "lint:fix": "eslint . --ext .ts,.astro --fix",
    "type-check": "tsc --noEmit",
    "optimize:css": "node scripts/optimize-css.js",
    "build:optimized": "npm run optimize:css && npm run build"
  },
  "dependencies": {
    "@astrojs/check": "^0.9.4",
    "@astrojs/tailwind": "^5.1.0",
    "astro": "^5.14.1",
    "tailwindcss": "^3.4.18",
    "typescript": "^5.9.3"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "autoprefixer": "^10.4.21",
    "cssnano": "^7.1.1",
    "eslint": "^9.37.0",
    "eslint-plugin-astro": "^1.3.1",
    "postcss": "^8.5.6"
  },
  "keywords": [
    "astro",
    "typescript",
    "tailwindcss",
    "solana",
    "marketplace",
    "blockchain"
  ],
  "author": "Soladia Team",
  "license": "MIT"
}
