<script>
  import { enhancedEnterpriseService } from '../../services/enhanced-enterprise-service';

  class EnhancedEnterpriseFeatures {
    constructor() {
      this.enterpriseService = enhancedEnterpriseService;
      this.currentPricingPeriod = 'annual';
      this.init();
    }

    init() {
      this.setupEventListeners();
      this.loadPricingData();
    }

    setupEventListeners() {
      // Pricing tabs
      document.querySelectorAll('[data-period]').forEach(tab => {
        tab.addEventListener('click', (e) => {
          this.switchPricingPeriod(e.target.dataset.period);
        });
      });

      // Pricing buttons
      document.querySelectorAll('[data-testid$="-btn"]').forEach(btn => {
        btn.addEventListener('click', (e) => {
          const plan = e.target.dataset.testid.replace('-btn', '');
          this.handlePricingClick(plan);
        });
      });

      // Contact form
      document.querySelector('[data-testid="contact-form"]')?.addEventListener('submit', (e) => {
        e.preventDefault();
        this.handleContactForm(e);
      });
    }

    switchPricingPeriod(period) {
      this.currentPricingPeriod = period;

      // Update tab states
      document.querySelectorAll('[data-period]').forEach(tab => {
        tab.classList.toggle('active', tab.dataset.period === period);
      });

      // Update pricing
      this.updatePricing(period);
    }

    updatePricing(period) {
      const pricingData = {
        annual: {
          starter: '$2,999',
          professional: '$7,999',
          enterprise: 'Custom'
        },
        monthly: {
          starter: '$3,499',
          professional: '$9,499',
          enterprise: 'Custom'
        }
      };

      const prices = pricingData[period];
      
      // Update price displays
      document.querySelector('[data-testid="starter-price"]').textContent = prices.starter;
      document.querySelector('[data-testid="professional-price"]').textContent = prices.professional;
      document.querySelector('[data-testid="enterprise-price"]').textContent = prices.enterprise;
    }

    handlePricingClick(plan) {
      switch (plan) {
        case 'starter':
          this.showPricingModal('Starter Plan', 'Contact our sales team to get started with the Starter plan.');
          break;
        case 'professional':
          this.showPricingModal('Professional Plan', 'Ready to scale? Let\'s discuss your Professional plan requirements.');
          break;
        case 'enterprise':
          this.showPricingModal('Enterprise Plan', 'Let\'s create a custom solution for your enterprise needs.');
          break;
      }
    }

    showPricingModal(title, message) {
      // This would typically show a modal or redirect to a contact form
      console.log(`${title}: ${message}`);
    }

    async handleContactForm(e) {
      const formData = new FormData(e.target);
      const data = Object.fromEntries(formData.entries());

      try {
        await this.enterpriseService.submitContactForm(data);
        this.showSuccess('Thank you! We\'ll contact you within 24 hours.');
        e.target.reset();
      } catch (error) {
        console.error('Error submitting contact form:', error);
        this.showError('Failed to submit form. Please try again.');
      }
    }

    async loadPricingData() {
      try {
        const pricing = await this.enterpriseService.getPricingData();
        this.updatePricing(this.currentPricingPeriod);
      } catch (error) {
        console.error('Error loading pricing data:', error);
      }
    }

    showSuccess(message) {
      // This would typically show a toast notification
      console.log('Success:', message);
    }

    showError(message) {
      // This would typically show a toast notification
      console.error('Error:', message);
    }
  }

  // Initialize the enterprise features when the component loads
  document.addEventListener('DOMContentLoaded', () => {
    new EnhancedEnterpriseFeatures();
  });
</script>
