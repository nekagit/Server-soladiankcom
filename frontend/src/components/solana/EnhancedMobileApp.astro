<script>
  import { enhancedMobileService } from '../../services/enhanced-mobile-service';

  class EnhancedMobileApp {
    constructor() {
      this.mobileService = enhancedMobileService;
      this.init();
    }

    init() {
      this.setupEventListeners();
      this.initializeAnimations();
    }

    setupEventListeners() {
      // FAQ accordion
      document.querySelectorAll('[data-testid^="faq-question-"]').forEach(question => {
        question.addEventListener('click', () => {
          this.toggleFAQ(question);
        });
      });

      // Beta signup
      document.querySelector('[data-testid="beta-signup-btn"]')?.addEventListener('click', () => {
        this.handleBetaSignup();
      });

      // Download buttons
      document.querySelector('[data-testid="download-ios"]')?.addEventListener('click', (e) => {
        e.preventDefault();
        this.handleDownload('ios');
      });

      document.querySelector('[data-testid="download-android"]')?.addEventListener('click', (e) => {
        e.preventDefault();
        this.handleDownload('android');
      });

      // Contact methods
      document.querySelectorAll('[data-testid^="contact-"]').forEach(method => {
        method.addEventListener('click', (e) => {
          this.handleContact(method.dataset.testid);
        });
      });
    }

    initializeAnimations() {
      // Intersection Observer for scroll animations
      const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
          if (entry.isIntersecting) {
            entry.target.classList.add('animate-in');
          }
        });
      }, {
        threshold: 0.1
      });

      // Observe elements for animation
      document.querySelectorAll('.feature-card, .screenshot-item, .spec-card, .timeline-item').forEach(el => {
        observer.observe(el);
      });
    }

    toggleFAQ(question) {
      const faqItem = question.closest('.faq-item');
      const isActive = faqItem.classList.contains('active');

      // Close all FAQ items
      document.querySelectorAll('.faq-item').forEach(item => {
        item.classList.remove('active');
      });

      // Open clicked item if it wasn't active
      if (!isActive) {
        faqItem.classList.add('active');
      }
    }

    async handleBetaSignup() {
      const emailInput = document.querySelector('[data-testid="beta-email-input"]');
      const email = emailInput?.value.trim();

      if (!email) {
        this.showError('Please enter your email address');
        return;
      }

      if (!this.isValidEmail(email)) {
        this.showError('Please enter a valid email address');
        return;
      }

      try {
        await this.mobileService.signupBeta(email);
        this.showSuccess('Successfully signed up for beta! We\'ll notify you when it\'s ready.');
        emailInput.value = '';
      } catch (error) {
        console.error('Beta signup error:', error);
        this.showError('Failed to sign up for beta. Please try again.');
      }
    }

    handleDownload(platform) {
      if (platform === 'ios') {
        // This would typically redirect to App Store
        this.showInfo('iOS app will be available on the App Store soon!');
      } else if (platform === 'android') {
        // This would typically redirect to Google Play
        this.showInfo('Android app will be available on Google Play soon!');
      }
    }

    handleContact(method) {
      switch (method) {
        case 'contact-email':
          window.location.href = 'mailto:mobile@soladia.com';
          break;
        case 'contact-discord':
          window.open('https://discord.gg/soladia', '_blank');
          break;
        case 'contact-twitter':
          window.open('https://twitter.com/soladia', '_blank');
          break;
      }
    }

    isValidEmail(email) {
      const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
      return emailRegex.test(email);
    }

    showSuccess(message) {
      // This would typically show a toast notification
      console.log('Success:', message);
    }

    showError(message) {
      // This would typically show a toast notification
      console.error('Error:', message);
    }

    showInfo(message) {
      // This would typically show a toast notification
      console.log('Info:', message);
    }
  }

  // Initialize the mobile app component when it loads
  document.addEventListener('DOMContentLoaded', () => {
    new EnhancedMobileApp();
  });
</script>
