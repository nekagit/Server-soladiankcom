<script>
  document.addEventListener('DOMContentLoaded', () => {
    // Security resource buttons
    const resourceButtons = document.querySelectorAll('button[class*="bg-blue-500"], button[class*="bg-green-500"], button[class*="bg-purple-500"], button[class*="bg-red-500"]');
    
    resourceButtons.forEach(button => {
      button.addEventListener('click', () => {
        const buttonText = button.textContent;
        alert(`Opening ${buttonText}...`);
      });
    });

    // Vulnerability report button
    const reportButton = document.querySelector('button[class*="border-2"]');
    reportButton?.addEventListener('click', () => {
      alert('Opening vulnerability reporting form...');
    });
  });
</script>
