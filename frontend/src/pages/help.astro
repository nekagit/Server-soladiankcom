---
// Help page - Customer support and FAQ
import Layout from '../layouts/Layout.astro';
---

<Layout title="Help Center - Soladia">
  <main class="min-h-screen bg-gray-50">
    <!-- Hero Section -->
    <section class="bg-gradient-to-r from-blue-600 to-purple-600 text-white py-16">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center">
          <h1 class="text-4xl md:text-6xl font-bold mb-6">
            üÜò Help Center
          </h1>
          <p class="text-xl md:text-2xl mb-8 opacity-90">
            Get help with your Soladia experience
          </p>
          <div class="max-w-2xl mx-auto">
            <div class="relative">
              <input 
                type="text" 
                placeholder="Search for help..." 
                class="w-full px-6 py-4 rounded-lg text-gray-900 text-lg"
              >
              <button class="absolute right-2 top-2 bg-blue-500 text-white px-6 py-2 rounded-lg hover:bg-blue-600 transition-colors">
                Search
              </button>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Quick Help -->
    <section class="py-16">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h2 class="text-3xl font-bold text-gray-900 mb-4">Quick Help</h2>
          <p class="text-lg text-gray-600">Common questions and solutions</p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          <!-- Help Card 1 -->
          <div class="bg-white rounded-lg shadow-lg p-6 hover:shadow-xl transition-shadow">
            <div class="text-3xl mb-4">üîó</div>
            <h3 class="text-xl font-bold text-gray-900 mb-2">Connecting Your Wallet</h3>
            <p class="text-gray-600 mb-4">Learn how to connect your Solana wallet to start trading</p>
            <button class="text-blue-500 hover:text-blue-600 font-semibold">
              Read Guide ‚Üí
            </button>
          </div>

          <!-- Help Card 2 -->
          <div class="bg-white rounded-lg shadow-lg p-6 hover:shadow-xl transition-shadow">
            <div class="text-3xl mb-4">üí≥</div>
            <h3 class="text-xl font-bold text-gray-900 mb-2">Making Payments</h3>
            <p class="text-gray-600 mb-4">How to buy and sell NFTs with Solana</p>
            <button class="text-blue-500 hover:text-blue-600 font-semibold">
              Read Guide ‚Üí
            </button>
          </div>

          <!-- Help Card 3 -->
          <div class="bg-white rounded-lg shadow-lg p-6 hover:shadow-xl transition-shadow">
            <div class="text-3xl mb-4">üõ°Ô∏è</div>
            <h3 class="text-xl font-bold text-gray-900 mb-2">Security & Safety</h3>
            <p class="text-gray-600 mb-4">Keep your assets safe with our security tips</p>
            <button class="text-blue-500 hover:text-blue-600 font-semibold">
              Read Guide ‚Üí
            </button>
          </div>

          <!-- Help Card 4 -->
          <div class="bg-white rounded-lg shadow-lg p-6 hover:shadow-xl transition-shadow">
            <div class="text-3xl mb-4">üì±</div>
            <h3 class="text-xl font-bold text-gray-900 mb-2">Mobile App</h3>
            <p class="text-gray-600 mb-4">Using Soladia on your mobile device</p>
            <button class="text-blue-500 hover:text-blue-600 font-semibold">
              Read Guide ‚Üí
            </button>
          </div>

          <!-- Help Card 5 -->
          <div class="bg-white rounded-lg shadow-lg p-6 hover:shadow-xl transition-shadow">
            <div class="text-3xl mb-4">üé®</div>
            <h3 class="text-xl font-bold text-gray-900 mb-2">Creating NFTs</h3>
            <p class="text-gray-600 mb-4">How to mint and list your own NFTs</p>
            <button class="text-blue-500 hover:text-blue-600 font-semibold">
              Read Guide ‚Üí
            </button>
          </div>

          <!-- Help Card 6 -->
          <div class="bg-white rounded-lg shadow-lg p-6 hover:shadow-xl transition-shadow">
            <div class="text-3xl mb-4">üí∞</div>
            <h3 class="text-xl font-bold text-gray-900 mb-2">Fees & Pricing</h3>
            <p class="text-gray-600 mb-4">Understanding marketplace fees and costs</p>
            <button class="text-blue-500 hover:text-blue-600 font-semibold">
              Read Guide ‚Üí
            </button>
          </div>
        </div>
      </div>
    </section>

    <!-- FAQ Section -->
    <section class="py-16 bg-gray-100">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h2 class="text-3xl font-bold text-gray-900 mb-4">Frequently Asked Questions</h2>
          <p class="text-lg text-gray-600">Find answers to common questions</p>
        </div>

        <div class="space-y-4">
          <!-- FAQ Item 1 -->
          <div class="bg-white rounded-lg shadow-sm">
            <button class="w-full text-left p-6 focus:outline-none" onclick="toggleFAQ(this)">
              <div class="flex justify-between items-center">
                <h3 class="text-lg font-semibold text-gray-900">How do I connect my Solana wallet?</h3>
                <span class="text-gray-500">+</span>
              </div>
            </button>
            <div class="px-6 pb-6 hidden">
              <p class="text-gray-600">
                To connect your Solana wallet, click the "Connect Wallet" button in the top navigation. 
                We support Phantom, Solflare, and Backpack wallets. Make sure you have one of these 
                wallets installed in your browser.
              </p>
            </div>
          </div>

          <!-- FAQ Item 2 -->
          <div class="bg-white rounded-lg shadow-sm">
            <button class="w-full text-left p-6 focus:outline-none" onclick="toggleFAQ(this)">
              <div class="flex justify-between items-center">
                <h3 class="text-lg font-semibold text-gray-900">What are the fees for buying and selling?</h3>
                <span class="text-gray-500">+</span>
              </div>
            </button>
            <div class="px-6 pb-6 hidden">
              <p class="text-gray-600">
                Soladia charges a 2.5% fee on successful sales. There are no listing fees, and you only 
                pay when your item sells. Additionally, you'll pay Solana network transaction fees 
                (typically less than $0.01).
              </p>
            </div>
          </div>

          <!-- FAQ Item 3 -->
          <div class="bg-white rounded-lg shadow-sm">
            <button class="w-full text-left p-6 focus:outline-none" onclick="toggleFAQ(this)">
              <div class="flex justify-between items-center">
                <h3 class="text-lg font-semibold text-gray-900">How do I create and list an NFT?</h3>
                <span class="text-gray-500">+</span>
              </div>
            </button>
            <div class="px-6 pb-6 hidden">
              <p class="text-gray-600">
                To create an NFT, go to the "Sell" page and click "Create NFT". Upload your image, 
                add metadata, and set your price. Once created, your NFT will be minted on the Solana 
                blockchain and listed on our marketplace.
              </p>
            </div>
          </div>

          <!-- FAQ Item 4 -->
          <div class="bg-white rounded-lg shadow-sm">
            <button class="w-full text-left p-6 focus:outline-none" onclick="toggleFAQ(this)">
              <div class="flex justify-between items-center">
                <h3 class="text-lg font-semibold text-gray-900">Is my wallet safe on Soladia?</h3>
                <span class="text-gray-500">+</span>
              </div>
            </button>
            <div class="px-6 pb-6 hidden">
              <p class="text-gray-600">
                Yes, your wallet is completely safe. We never have access to your private keys or 
                seed phrases. All transactions are signed by your wallet, and we use industry-standard 
                security practices to protect your data.
              </p>
            </div>
          </div>

          <!-- FAQ Item 5 -->
          <div class="bg-white rounded-lg shadow-sm">
            <button class="w-full text-left p-6 focus:outline-none" onclick="toggleFAQ(this)">
              <div class="flex justify-between items-center">
                <h3 class="text-lg font-semibold text-gray-900">How do I get support if I have an issue?</h3>
                <span class="text-gray-500">+</span>
              </div>
            </button>
            <div class="px-6 pb-6 hidden">
              <p class="text-gray-600">
                You can contact our support team through the contact form below, or join our Discord 
                community for real-time help. We typically respond within 24 hours and are available 
                7 days a week.
              </p>
            </div>
          </div>

          <!-- FAQ Item 6 -->
          <div class="bg-white rounded-lg shadow-sm">
            <button class="w-full text-left p-6 focus:outline-none" onclick="toggleFAQ(this)">
              <div class="flex justify-between items-center">
                <h3 class="text-lg font-semibold text-gray-900">Can I cancel a purchase?</h3>
                <span class="text-gray-500">+</span>
              </div>
            </button>
            <div class="px-6 pb-6 hidden">
              <p class="text-gray-600">
                Once a purchase is confirmed on the blockchain, it cannot be cancelled as it's 
                part of the immutable blockchain record. However, you can always resell the NFT 
                on our marketplace if you change your mind.
              </p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Contact Support -->
    <section class="py-16">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h2 class="text-3xl font-bold text-gray-900 mb-4">Still Need Help?</h2>
          <p class="text-lg text-gray-600">Contact our support team</p>
        </div>

        <div class="bg-white rounded-lg shadow-lg p-8">
          <form class="space-y-6">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              <div>
                <label for="name" class="block text-sm font-medium text-gray-700 mb-2">
                  Full Name
                </label>
                <input 
                  type="text" 
                  id="name" 
                  required
                  class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                >
              </div>
              <div>
                <label for="email" class="block text-sm font-medium text-gray-700 mb-2">
                  Email Address
                </label>
                <input 
                  type="email" 
                  id="email" 
                  required
                  class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                >
              </div>
            </div>

            <div>
              <label for="subject" class="block text-sm font-medium text-gray-700 mb-2">
                Subject
              </label>
              <select 
                id="subject" 
                required
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
              >
                <option value="">Select a subject</option>
                <option value="wallet">Wallet Connection</option>
                <option value="payment">Payment Issues</option>
                <option value="nft">NFT Creation</option>
                <option value="security">Security Concerns</option>
                <option value="account">Account Issues</option>
                <option value="other">Other</option>
              </select>
            </div>

            <div>
              <label for="message" class="block text-sm font-medium text-gray-700 mb-2">
                Message
              </label>
              <textarea 
                id="message" 
                rows="5"
                required
                placeholder="Describe your issue in detail..."
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
              ></textarea>
            </div>

            <button 
              type="submit"
              class="w-full bg-blue-500 text-white py-3 px-6 rounded-lg font-semibold hover:bg-blue-600 transition-colors"
            >
              Send Message
            </button>
          </form>
        </div>
      </div>
    </section>

    <!-- Community -->
    <section class="py-16 bg-gray-100">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h2 class="text-3xl font-bold text-gray-900 mb-4">Join Our Community</h2>
          <p class="text-lg text-gray-600">Connect with other users and get help</p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
          <div class="bg-white p-6 rounded-lg shadow-sm text-center">
            <div class="text-3xl mb-4">üí¨</div>
            <h3 class="text-xl font-bold text-gray-900 mb-2">Discord</h3>
            <p class="text-gray-600 mb-4">Join our Discord server for real-time help and community discussions</p>
            <button class="bg-indigo-500 text-white px-6 py-2 rounded-lg hover:bg-indigo-600 transition-colors">
              Join Discord
            </button>
          </div>

          <div class="bg-white p-6 rounded-lg shadow-sm text-center">
            <div class="text-3xl mb-4">üê¶</div>
            <h3 class="text-xl font-bold text-gray-900 mb-2">Twitter</h3>
            <p class="text-gray-600 mb-4">Follow us on Twitter for updates and announcements</p>
            <button class="bg-blue-500 text-white px-6 py-2 rounded-lg hover:bg-blue-600 transition-colors">
              Follow Us
            </button>
          </div>

          <div class="bg-white p-6 rounded-lg shadow-sm text-center">
            <div class="text-3xl mb-4">üìö</div>
            <h3 class="text-xl font-bold text-gray-900 mb-2">Documentation</h3>
            <p class="text-gray-600 mb-4">Read our comprehensive documentation and guides</p>
            <button class="bg-green-500 text-white px-6 py-2 rounded-lg hover:bg-green-600 transition-colors">
              View Docs
            </button>
          </div>
        </div>
      </div>
    </section>
  </main>
</Layout>

<script>
  function toggleFAQ(button) {
    const content = button.nextElementSibling;
    const icon = button.querySelector('span');
    
    if (content.classList.contains('hidden')) {
      content.classList.remove('hidden');
      icon.textContent = '‚àí';
    } else {
      content.classList.add('hidden');
      icon.textContent = '+';
    }
  }

  // Search functionality
  document.addEventListener('DOMContentLoaded', () => {
    const searchInput = document.querySelector('input[placeholder="Search for help..."]');
    const searchButton = document.querySelector('button[class*="bg-blue-500"]');

    searchButton?.addEventListener('click', () => {
      const query = searchInput?.value;
      if (query) {
        // In a real app, this would perform a search
        alert(`Searching for: "${query}"`);
      }
    });

    // Contact form submission
    const contactForm = document.querySelector('form');
    contactForm?.addEventListener('submit', (e) => {
      e.preventDefault();
      alert('Thank you for your message! We\'ll get back to you within 24 hours.');
    });
  });
</script>
