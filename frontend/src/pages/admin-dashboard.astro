---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import AuthGuard from '../components/AuthGuard.astro';
import Card from '../components/atoms/Card.astro';
import Button from '../components/atoms/Button.astro';
---

<Layout title='Admin Dashboard - Soladia'>
  <Navigation />

  <AuthGuard requireAuth={true} requireRole='admin' redirectTo='/auth'>
    <main class='min-h-screen bg-gray-50 py-8'>
      <div class='max-w-7xl mx-auto px-4 sm:px-6 lg:px-8'>
        <!-- Header -->
        <div class='mb-8'>
          <h1 class='text-3xl font-bold text-gray-900'>Admin Dashboard</h1>
          <p class='mt-2 text-gray-600'>
            Manage your Soladia marketplace platform
          </p>
        </div>

        <!-- Quick Stats -->
        <div class='grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8'>
          <Card variant='elevated' padding='lg'>
            <div class='flex items-center justify-between'>
              <div>
                <p class='text-sm font-medium text-gray-500'>Total Users</p>
                <p id='total-users' class='text-3xl font-bold text-gray-900'>
                  0
                </p>
                <p id='users-change' class='text-sm text-green-600'>+0%</p>
              </div>
              <div
                class='w-12 h-12 bg-blue-100 rounded-full flex items-center justify-center'
              >
                <svg
                  class='w-6 h-6 text-blue-600'
                  fill='none'
                  stroke='currentColor'
                  viewBox='0 0 24 24'
                >
                  <path
                    stroke-linecap='round'
                    stroke-linejoin='round'
                    stroke-width='2'
                    d='M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z'
                  ></path>
                </svg>
              </div>
            </div>
          </Card>

          <Card variant='elevated' padding='lg'>
            <div class='flex items-center justify-between'>
              <div>
                <p class='text-sm font-medium text-gray-500'>Active Listings</p>
                <p
                  id='active-listings'
                  class='text-3xl font-bold text-gray-900'
                >
                  0
                </p>
                <p id='listings-change' class='text-sm text-blue-600'>+0%</p>
              </div>
              <div
                class='w-12 h-12 bg-green-100 rounded-full flex items-center justify-center'
              >
                <svg
                  class='w-6 h-6 text-green-600'
                  fill='none'
                  stroke='currentColor'
                  viewBox='0 0 24 24'
                >
                  <path
                    stroke-linecap='round'
                    stroke-linejoin='round'
                    stroke-width='2'
                    d='M19 11H5m14 0l-8-8m8 8l-8 8'></path>
                </svg>
              </div>
            </div>
          </Card>

          <Card variant='elevated' padding='lg'>
            <div class='flex items-center justify-between'>
              <div>
                <p class='text-sm font-medium text-gray-500'>Total Revenue</p>
                <p id='total-revenue' class='text-3xl font-bold text-gray-900'>
                  $0.00
                </p>
                <p id='revenue-change' class='text-sm text-green-600'>+0%</p>
              </div>
              <div
                class='w-12 h-12 bg-yellow-100 rounded-full flex items-center justify-center'
              >
                <svg
                  class='w-6 h-6 text-yellow-600'
                  fill='none'
                  stroke='currentColor'
                  viewBox='0 0 24 24'
                >
                  <path
                    stroke-linecap='round'
                    stroke-linejoin='round'
                    stroke-width='2'
                    d='M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1'
                  ></path>
                </svg>
              </div>
            </div>
          </Card>

          <Card variant='elevated' padding='lg'>
            <div class='flex items-center justify-between'>
              <div>
                <p class='text-sm font-medium text-gray-500'>Pending Reviews</p>
                <p
                  id='pending-reviews'
                  class='text-3xl font-bold text-gray-900'
                >
                  0
                </p>
                <p id='reviews-change' class='text-sm text-orange-600'>+0%</p>
              </div>
              <div
                class='w-12 h-12 bg-orange-100 rounded-full flex items-center justify-center'
              >
                <svg
                  class='w-6 h-6 text-orange-600'
                  fill='none'
                  stroke='currentColor'
                  viewBox='0 0 24 24'
                >
                  <path
                    stroke-linecap='round'
                    stroke-linejoin='round'
                    stroke-width='2'
                    d='M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z'></path>
                </svg>
              </div>
            </div>
          </Card>
        </div>

        <!-- Main Content Grid -->
        <div class='grid grid-cols-1 lg:grid-cols-3 gap-8 mb-8'>
          <!-- Recent Activity -->
          <div class='lg:col-span-2'>
            <Card variant='default' padding='lg'>
              <div class='flex items-center justify-between mb-6'>
                <h2 class='text-xl font-semibold text-gray-900'>
                  Recent Activity
                </h2>
                <Button variant='outline' size='sm' onclick='refreshActivity()'>
                  Refresh
                </Button>
              </div>
              <div id='recent-activity' class='space-y-4'>
                <div
                  class='flex items-center space-x-3 p-3 bg-gray-50 rounded-lg'
                >
                  <div
                    class='w-8 h-8 bg-green-100 rounded-full flex items-center justify-center'
                  >
                    <svg
                      class='w-4 h-4 text-green-600'
                      fill='none'
                      stroke='currentColor'
                      viewBox='0 0 24 24'
                    >
                      <path
                        stroke-linecap='round'
                        stroke-linejoin='round'
                        stroke-width='2'
                        d='M5 13l4 4L19 7'></path>
                    </svg>
                  </div>
                  <div class='flex-1'>
                    <p class='text-sm text-gray-900'>New user registered</p>
                    <p class='text-xs text-gray-500'>2 minutes ago</p>
                  </div>
                </div>
              </div>
            </Card>
          </div>

          <!-- System Status -->
          <div>
            <Card variant='default' padding='lg'>
              <h2 class='text-xl font-semibold text-gray-900 mb-6'>
                System Status
              </h2>
              <div class='space-y-4'>
                <div class='flex items-center justify-between'>
                  <span class='text-sm text-gray-600'>API Status</span>
                  <span
                    id='api-status'
                    class='inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800'
                  >
                    Online
                  </span>
                </div>
                <div class='flex items-center justify-between'>
                  <span class='text-sm text-gray-600'>Database</span>
                  <span
                    id='db-status'
                    class='inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800'
                  >
                    Healthy
                  </span>
                </div>
                <div class='flex items-center justify-between'>
                  <span class='text-sm text-gray-600'>Solana RPC</span>
                  <span
                    id='solana-status'
                    class='inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800'
                  >
                    Connected
                  </span>
                </div>
                <div class='flex items-center justify-between'>
                  <span class='text-sm text-gray-600'>Redis Cache</span>
                  <span
                    id='redis-status'
                    class='inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800'
                  >
                    Active
                  </span>
                </div>
              </div>
            </Card>
          </div>
        </div>

        <!-- Management Sections -->
        <div class='grid grid-cols-1 lg:grid-cols-2 gap-8 mb-8'>
          <!-- User Management -->
          <Card variant='default' padding='lg'>
            <div class='flex items-center justify-between mb-6'>
              <h2 class='text-xl font-semibold text-gray-900'>
                User Management
              </h2>
              <Button
                variant='primary'
                size='sm'
                onclick='openUserManagement()'
              >
                Manage Users
              </Button>
            </div>
            <div class='space-y-3'>
              <div
                class='flex justify-between items-center p-3 bg-gray-50 rounded-lg'
              >
                <div>
                  <p class='text-sm font-medium text-gray-900'>
                    New Users Today
                  </p>
                  <p class='text-xs text-gray-500'>Last 24 hours</p>
                </div>
                <span class='text-lg font-semibold text-gray-900'>12</span>
              </div>
              <div
                class='flex justify-between items-center p-3 bg-gray-50 rounded-lg'
              >
                <div>
                  <p class='text-sm font-medium text-gray-900'>Active Users</p>
                  <p class='text-xs text-gray-500'>Currently online</p>
                </div>
                <span class='text-lg font-semibold text-gray-900'>156</span>
              </div>
              <div
                class='flex justify-between items-center p-3 bg-gray-50 rounded-lg'
              >
                <div>
                  <p class='text-sm font-medium text-gray-900'>
                    Pending Verification
                  </p>
                  <p class='text-xs text-gray-500'>Awaiting approval</p>
                </div>
                <span class='text-lg font-semibold text-orange-600'>3</span>
              </div>
            </div>
          </Card>

          <!-- Content Management -->
          <Card variant='default' padding='lg'>
            <div class='flex items-center justify-between mb-6'>
              <h2 class='text-xl font-semibold text-gray-900'>
                Content Management
              </h2>
              <Button
                variant='primary'
                size='sm'
                onclick='openContentManagement()'
              >
                Manage Content
              </Button>
            </div>
            <div class='space-y-3'>
              <div
                class='flex justify-between items-center p-3 bg-gray-50 rounded-lg'
              >
                <div>
                  <p class='text-sm font-medium text-gray-900'>
                    Pending Listings
                  </p>
                  <p class='text-xs text-gray-500'>Awaiting approval</p>
                </div>
                <span class='text-lg font-semibold text-orange-600'>8</span>
              </div>
              <div
                class='flex justify-between items-center p-3 bg-gray-50 rounded-lg'
              >
                <div>
                  <p class='text-sm font-medium text-gray-900'>
                    Reported Items
                  </p>
                  <p class='text-xs text-gray-500'>Needs review</p>
                </div>
                <span class='text-lg font-semibold text-red-600'>2</span>
              </div>
              <div
                class='flex justify-between items-center p-3 bg-gray-50 rounded-lg'
              >
                <div>
                  <p class='text-sm font-medium text-gray-900'>
                    Featured Items
                  </p>
                  <p class='text-xs text-gray-500'>Currently featured</p>
                </div>
                <span class='text-lg font-semibold text-green-600'>24</span>
              </div>
            </div>
          </Card>
        </div>

        <!-- Analytics and Reports -->
        <div class='grid grid-cols-1 lg:grid-cols-2 gap-8'>
          <!-- Revenue Analytics -->
          <Card variant='default' padding='lg'>
            <h2 class='text-xl font-semibold text-gray-900 mb-6'>
              Revenue Analytics
            </h2>
            <div
              id='revenue-chart'
              class='h-64 flex items-center justify-center bg-gray-50 rounded-lg'
            >
              <div class='text-center'>
                <svg
                  class='w-12 h-12 text-gray-400 mx-auto mb-2'
                  fill='none'
                  stroke='currentColor'
                  viewBox='0 0 24 24'
                >
                  <path
                    stroke-linecap='round'
                    stroke-linejoin='round'
                    stroke-width='2'
                    d='M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z'
                  ></path>
                </svg>
                <p class='text-sm text-gray-500'>
                  Revenue chart will load here
                </p>
              </div>
            </div>
          </Card>

          <!-- System Health -->
          <Card variant='default' padding='lg'>
            <h2 class='text-xl font-semibold text-gray-900 mb-6'>
              System Health
            </h2>
            <div class='space-y-4'>
              <div>
                <div class='flex justify-between text-sm mb-1'>
                  <span class='text-gray-600'>CPU Usage</span>
                  <span id='cpu-usage' class='text-gray-900'>45%</span>
                </div>
                <div class='w-full bg-gray-200 rounded-full h-2'>
                  <div class='bg-green-500 h-2 rounded-full' style='width: 45%'>
                  </div>
                </div>
              </div>
              <div>
                <div class='flex justify-between text-sm mb-1'>
                  <span class='text-gray-600'>Memory Usage</span>
                  <span id='memory-usage' class='text-gray-900'>67%</span>
                </div>
                <div class='w-full bg-gray-200 rounded-full h-2'>
                  <div
                    class='bg-yellow-500 h-2 rounded-full'
                    style='width: 67%'
                  >
                  </div>
                </div>
              </div>
              <div>
                <div class='flex justify-between text-sm mb-1'>
                  <span class='text-gray-600'>Disk Usage</span>
                  <span id='disk-usage' class='text-gray-900'>23%</span>
                </div>
                <div class='w-full bg-gray-200 rounded-full h-2'>
                  <div class='bg-green-500 h-2 rounded-full' style='width: 23%'>
                  </div>
                </div>
              </div>
              <div>
                <div class='flex justify-between text-sm mb-1'>
                  <span class='text-gray-600'>Network I/O</span>
                  <span id='network-usage' class='text-gray-900'>12%</span>
                </div>
                <div class='w-full bg-gray-200 rounded-full h-2'>
                  <div class='bg-green-500 h-2 rounded-full' style='width: 12%'>
                  </div>
                </div>
              </div>
            </div>
          </Card>
        </div>

        <!-- Quick Actions -->
        <div class='mt-8'>
          <Card variant='default' padding='lg'>
            <h2 class='text-xl font-semibold text-gray-900 mb-6'>
              Quick Actions
            </h2>
            <div class='grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4'>
              <Button
                variant='outline'
                size='lg'
                onclick='openUserManagement()'
                class='flex flex-col items-center p-4 h-24'
              >
                <svg
                  class='w-6 h-6 mb-2'
                  fill='none'
                  stroke='currentColor'
                  viewBox='0 0 24 24'
                >
                  <path
                    stroke-linecap='round'
                    stroke-linejoin='round'
                    stroke-width='2'
                    d='M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z'
                  ></path>
                </svg>
                <span class='text-sm'>Manage Users</span>
              </Button>

              <Button
                variant='outline'
                size='lg'
                onclick='openContentManagement()'
                class='flex flex-col items-center p-4 h-24'
              >
                <svg
                  class='w-6 h-6 mb-2'
                  fill='none'
                  stroke='currentColor'
                  viewBox='0 0 24 24'
                >
                  <path
                    stroke-linecap='round'
                    stroke-linejoin='round'
                    stroke-width='2'
                    d='M19 11H5m14 0l-8-8m8 8l-8 8'></path>
                </svg>
                <span class='text-sm'>Manage Content</span>
              </Button>

              <Button
                variant='outline'
                size='lg'
                onclick='openAnalytics()'
                class='flex flex-col items-center p-4 h-24'
              >
                <svg
                  class='w-6 h-6 mb-2'
                  fill='none'
                  stroke='currentColor'
                  viewBox='0 0 24 24'
                >
                  <path
                    stroke-linecap='round'
                    stroke-linejoin='round'
                    stroke-width='2'
                    d='M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z'
                  ></path>
                </svg>
                <span class='text-sm'>View Analytics</span>
              </Button>

              <Button
                variant='outline'
                size='lg'
                onclick='openSettings()'
                class='flex flex-col items-center p-4 h-24'
              >
                <svg
                  class='w-6 h-6 mb-2'
                  fill='none'
                  stroke='currentColor'
                  viewBox='0 0 24 24'
                >
                  <path
                    stroke-linecap='round'
                    stroke-linejoin='round'
                    stroke-width='2'
                    d='M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z'
                  ></path>
                  <path
                    stroke-linecap='round'
                    stroke-linejoin='round'
                    stroke-width='2'
                    d='M15 12a3 3 0 11-6 0 3 3 0 016 0z'></path>
                </svg>
                <span class='text-sm'>System Settings</span>
              </Button>
            </div>
          </Card>
        </div>
      </div>
    </main>
  </AuthGuard>
</Layout>

<script>
  let adminData: any = {};

  // Initialize admin dashboard
  document.addEventListener('DOMContentLoaded', () => {
    loadAdminData();
    startRealTimeUpdates();
  });

  // Load admin data
  async function loadAdminData() {
    try {
      // Mock data - replace with actual API calls
      adminData = {
        users: {
          total: 1250,
          change: 12.5,
          newToday: 12,
          active: 156,
          pending: 3,
        },
        listings: {
          total: 89,
          change: 8.3,
          pending: 8,
          reported: 2,
          featured: 24,
        },
        revenue: {
          total: 12500.5,
          change: 15.2,
        },
        reviews: {
          pending: 5,
          change: -2.1,
        },
        system: {
          cpu: 45,
          memory: 67,
          disk: 23,
          network: 12,
        },
      };

      updateDashboard();
    } catch (error) {
      console.error('Failed to load admin data:', error);
    }
  }

  // Update dashboard display
  function updateDashboard() {
    const { users, listings, revenue, reviews, system } = adminData;

    // Update stats
    updateStat('total-users', users.total, users.change);
    updateStat('active-listings', listings.total, listings.change);
    updateStat(
      'total-revenue',
      `$${revenue.total.toLocaleString()}`,
      revenue.change
    );
    updateStat('pending-reviews', reviews.pending, reviews.change);

    // Update system health
    updateSystemHealth('cpu-usage', system.cpu);
    updateSystemHealth('memory-usage', system.memory);
    updateSystemHealth('disk-usage', system.disk);
    updateSystemHealth('network-usage', system.network);
  }

  // Update stat display
  function updateStat(
    elementId: string,
    value: string | number,
    change: number
  ) {
    const element = document.getElementById(elementId);
    const changeElement = document.getElementById(
      elementId.replace('-', '-change')
    );

    if (element) element.textContent = value.toString();
    if (changeElement) {
      changeElement.textContent = `${change >= 0 ? '+' : ''}${change}%`;
      changeElement.className = `text-sm ${change >= 0 ? 'text-green-600' : 'text-red-600'}`;
    }
  }

  // Update system health
  function updateSystemHealth(elementId: string, percentage: number) {
    const element = document.getElementById(elementId);
    if (element) {
      element.textContent = `${percentage}%`;

      // Update progress bar
      const progressBar =
        element.parentElement?.nextElementSibling?.querySelector(
          'div'
        ) as HTMLElement;
      if (progressBar) {
        progressBar.style.width = `${percentage}%`;

        // Update color based on percentage
        if (percentage < 50) {
          progressBar.className = 'bg-green-500 h-2 rounded-full';
        } else if (percentage < 80) {
          progressBar.className = 'bg-yellow-500 h-2 rounded-full';
        } else {
          progressBar.className = 'bg-red-500 h-2 rounded-full';
        }
      }
    }
  }

  // Start real-time updates
  function startRealTimeUpdates() {
    // Update every 30 seconds
    setInterval(() => {
      loadAdminData();
    }, 30000);
  }

  // Refresh activity
  function refreshActivity() {
    loadAdminData();
    showNotification('Activity refreshed!', 'success');
  }

  // Open user management
  function openUserManagement() {
    showNotification('Opening user management...', 'info');
    // In a real app, this would navigate to user management page
    console.log('Opening user management');
  }

  // Open content management
  function openContentManagement() {
    showNotification('Opening content management...', 'info');
    // In a real app, this would navigate to content management page
    console.log('Opening content management');
  }

  // Open analytics
  function openAnalytics() {
    window.location.href = '/analytics';
  }

  // Open settings
  function openSettings() {
    showNotification('Opening system settings...', 'info');
    // In a real app, this would open settings modal or navigate to settings page
    console.log('Opening system settings');
  }

  // Show notification
  function showNotification(
    message: string,
    type: 'success' | 'error' | 'info'
  ) {
    const notification = document.createElement('div');
    notification.className = `fixed top-4 right-4 p-4 rounded-md text-white z-50 ${
      type === 'success'
        ? 'bg-green-500'
        : type === 'error'
          ? 'bg-red-500'
          : 'bg-blue-500'
    }`;
    notification.textContent = message;
    document.body.appendChild(notification);

    setTimeout(() => {
      notification.remove();
    }, 3000);
  }
</script>

<style>
  .admin-dashboard {
    min-height: 100vh;
  }

  .stat-card {
    transition: transform 0.2s ease-in-out;
  }

  .stat-card:hover {
    transform: translateY(-2px);
  }

  .progress-bar {
    transition: width 0.3s ease-in-out;
  }
</style>
