{
  "name": "soladia-marketplace",
  "type": "module",
  "version": "1.0.0",
  "description": "Soladia - Decentralized marketplace with Astro, TypeScript, Vite, and Solana Pay",
  "private": true,
  "scripts": {
    "dev": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "astro": "astro",
    "dev:backend": "cd backend && uvicorn main:app --reload --host 0.0.0.0 --port 8000",
    "dev:full": "concurrently \"npm run dev\" \"npm run dev:backend\"",
    "type-check": "astro check",
    "lint": "eslint . --ext .astro,.ts,.js",
    "lint:fix": "eslint . --ext .astro,.ts,.js --fix"
  },
  "dependencies": {
    "@astrojs/tailwind": "^6.0.2",
    "@tailwindcss/vite": "^4.1.14",
    "@types/node": "^24.6.2",
    "astro": "^5.14.1",
    "concurrently": "^9.2.1",
    "tailwindcss": "^4.1.14"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^9.0.0",
    "eslint-plugin-astro": "^1.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": [
    "soladia",
    "marketplace",
    "solana",
    "astro",
    "typescript",
    "vite",
    "fastapi",
    "decentralized",
    "blockchain"
  ],
  "author": "Kara & Weiss IT",
  "license": "MIT"
}
