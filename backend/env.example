# Database Configuration
DATABASE_URL=sqlite:///./soladia.db
# For production, use PostgreSQL:
# DATABASE_URL=postgresql://user:password@localhost/soladia

# Database Connection Pool (PostgreSQL only)
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=40
DB_POOL_RECYCLE=3600
DB_POOL_PRE_PING=True
DB_ECHO_POOL=False

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=False
LOG_LEVEL=INFO

# CORS Configuration
# Comma-separated list of allowed origins
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:8081

# Solana Configuration
SOLANA_RPC_URL=https://api.devnet.solana.com
SOLANA_NETWORK=devnet
# For mainnet: SOLANA_NETWORK=mainnet-beta

# Rate Limiting
RATE_LIMIT_ENABLED=True
RATE_LIMIT_GENERAL=100/minute
RATE_LIMIT_PAYMENT=10/minute
RATE_LIMIT_AUTH=5/minute

# Security
SECRET_KEY=your-secret-key-here-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=30

# Redis (optional, for caching)
REDIS_URL=redis://localhost:6379/0
REDIS_ENABLED=False

# Monitoring
ENABLE_METRICS=True
ENABLE_HEALTH_CHECK=True

